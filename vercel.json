{
	"buildCommand": "cp vite.config.vercel.ts vite.config.ts && npm run build",
	"outputDirectory": "build",
	"build": {
		"env": {
			"NODE_OPTIONS": "--max-old-space-size=16384",
			"NODE_ENV": "production",
			"VITE_BUILD_TARGET": "vercel"
		}
	},
	"functions": {
		"build/server/**": {
			"maxDuration": 30
		}
	},
	"rewrites": [
		{
			"source": "/(.*)",
			"destination": "/index.html"
		}
	]
}